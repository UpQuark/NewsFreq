@using System.Web.Mvc
@using System.Web.Mvc.Html
@model DataNervesUI.Models.NewsDataModel

@{
    ViewBag.Title = "News Frequency Search";
}

<div id="NewsSearchForm">
    <div class="content-wrapper">
        <hgroup class="title">
            <h1>@ViewBag.Title</h1>
            <h2>@ViewBag.Message</h2>
        </hgroup>
    </div>
    <div>
        <p class="descriptionText">
            This tool enables you to analyze the popularity of topics in American news coverage.
            You can use it to gather data on major trends in news reporting and visualize them in seconds.
            Try searching issues that interest you to see how the volume of coverage changes over time and how it compares to other topics.<br/>
        </p>
        <p class="disclaimer">
            This application is a work in progress and will change over time. Feedback, comments and bug reports are encouraged; please direct them <a href = "mailto:sam@datanerves.com">here</a>
        </p>
    </div>
    <div id="NewsDataFormWrapper">
        <table id="NewsDataSearchForm">
            <tr>
                <td>
                    <span>
                        Enter search term or terms. Boolean operators are supported
                    </span><br/>
                    <input type="text" id="SearchTerms" placeholder="Search Terms"/>
                </td>
            </tr>
            <tr>
                <td>
                    <span> Enter date range: </span><br/>
                    <input type="text" id="DateFrom" class = "DatePicker" placeholder = "Start date"/>
                    <span>&nbsp; to &nbsp;</span>  
                    <input type="text" id="DateTo" class = "DatePicker" placeholder = "End date"/>
                
                </td>
            </tr>
            <tr>
                <td>
                    <!--
                        <select>
                            <span>In</span>
                            <option value="">Whole article</option>
                            <option value="Lead">Lede</option>
                            <option value="Title">Headline</option>
                            <option value="Topics">Index Terms</option>
                            <option value="Author">Author</option>
                            <option value="Section">Section</option>
                            <option value="Edition">Edition</option>
                            <option value="CapGraph">Caption</option>
                            <option value="Page">Page</option>
                            <option value="Source">Source</option>
                        </select>
                        -->
                    <span id="ErrorLabel"></span>
                    <input type="submit" value="Search" id="SearchButton" onclick="newsSearch()" />
                    <input type="button" value="Clear data" id="ClearButton" onclick="clearResults()" />
                    <div class="modal"><img src="http://i.imgur.com/RZPE8Wh.gif"/></div>
                
                </td>
            </tr>
        </table>
    </div>
    <div id="SpecialSearchRadioGroup">
        <span>Search type: </span><span class="question"><strong>?</strong></span><br/>
        <input type="radio" name="specialSearches" id="Monthly" checked/> Monthly <br/>
        <input type="radio" name="specialSearches" id="Annual"/> Annual <br/>
        <!--<input type="radio" name="specialSearches" id="None" /> Inclusive <br/>-->
    </div>
</div>
    


 
<div id="NewsDataChartWrapper">
    <canvas id="NewsDataChart" height="350" width="500" style="display:none" ></canvas>
    <div id="GraphLegend"></div>
</div>
    
<div id="NewsDataTableWrapper">  
    <table id="NewsDataTable" style="display:none">
        <tr class="newsTableHead">
            <td>
                Search Term
            </td>
            <td>
                Date From
            </td>
            <td>
                Date To
            </td>
            <td>
                Article Count
            </td>
        </tr>
        <tbody id="NewsDataTableContent">
        </tbody>
    </table>
    <meta name = "viewport" content = "initial-scale = 1, user-scalable = no">
</div> 



@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".DatePicker").datepicker({ changeYear: true });
        });

        $body = $("body");

        $(document).on({
            ajaxStart: function () {
                if (!$('#None').is(':checked')) {
                    $body.addClass("loading");
                }
            },
            ajaxStop: function () {
                $body.removeClass("loading");
            }
        });

        $(document).ready(function () {
            $("span.question").hover(function () {
                $(this).append('<div class="tooltip"><p>Monthly searches retrieve one data point for each month in the date range. Annual searches retrieve one point per year. <strong>Single data points cannot be graphed.</strong></p></div>');
            }, function () {
                $("div.tooltip").remove();
            });
        });

        $("#SearchTerms").keyup(function (event) {
            if (event.keyCode == 13) {
                $("#SearchButton").click();
            }
        });
    </script>
}