@using System.Web.Mvc
@using System.Web.Mvc.Html
@model DataNervesUIMVC.Models.QueryModel

@{
    ViewBag.Title = "NewsLibrary Search";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h2>@ViewBag.Title.</h2>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
<br/>

<div>
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div><span>Enter search term or terms. Boolean operators are supported</span><br/>
            @Html.TextBoxFor(m => m.SearchString, new { @placeholder = "Search terms" })
            <br/>

            <span> Enter date from and date to </span><br/>
            @Html.TextBox(" ", Model.DateFrom != DateTime.MinValue ? Model.DateFrom.ToString("dd MM yyyy") : " ", new {@class = "DatePicker" })
            <span>&nbsp; to &nbsp;</span>   
            @Html.TextBox(" ", Model.DateTo != DateTime.MinValue ? Model.DateTo.ToString("dd MM yyyy") : " ", new {@class = "DatePicker" })

            <br/>
    
            <span> Choose search target</span><br/>
            @Html.DropDownListFor(m => m.SearchTargetId, Model.SearchTargets)

            <input type="submit" value="Search" />
        </div>
    }
       
</div>

@section Scripts{
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script type="text/javascript">
        $(document).ready(function () {
            $(".DatePicker").datepicker();
        });
    </script>
}